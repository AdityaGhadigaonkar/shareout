<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/normalize.css' />
    <link rel='stylesheet' href='/stylesheets/helpers.css' />
    <link rel='stylesheet' href='/stylesheets/shareout.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/groups.css' />
    <link rel='stylesheet' href='/stylesheets/users.css' /> 
    <link rel='stylesheet' href='/stylesheets/share_out.css' /> 
  </head>
  <body>
   <div class="modal-header">
  </div>
    <div class="container">
      <nav class="main-menu">
        <ul class="nav pull-left">
          <% if (current_user) { %>
            <li class=""><a href="/groups/dashboard"  class="btn btn-success">Dashboard</a> </li>

            <li class=""><a href="/groups"  class="btn btn-success">My Groups</a></li>
          <% } else { %>
            <li class="active"><a href="/groups/dashboard" class="btn btn-success">Home</a></li>
          <% } %>
        </ul>
          <% if (current_user) { %>
            <div class="welcome-nav pull-right">
              Welcome <b><%= current_user.name %></b>
              <a href="/users/sign_out" class="btn btn-success">Sign Out</a>

              </div>
            
          <% } else { %>

            <ul class="auth-nav nav pull-right">
             <li class="auth-nav-sign-in"><a href="/groups/dashboard"  class="btn btn-success">Sign In</a></li>
              <li class="auth-nav-sign-up"><a href="/users/sign_up"  class="btn btn-success">Sign Up</a></li>

            </ul>
          <% } %>


          <div class="footerBar"></div>
        <div class="clearfix"></div>  
      </nav>

      <% if (alert_error) { %>
        <p class="alert alert-error"><%= alert_error %></p>
      <% } %>

      <% if (alert_success) { %>
        <p class="alert alert-success"><%= alert_success %></p>
      <% } %>
